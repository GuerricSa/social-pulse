<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                error: "L'adresse email est obligatoire pour se connecter",
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: 'Mot de passe',
                required: false,
                input_html: { autocomplete: "current-password" } %>

  </div>

  <div class="form-actions d-flex">
    <%= f.button :submit, "Se connecter", class: "purple-btn" %>
    <div class="align-self-center"><%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %></div>
  </div>
<% end %>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>
