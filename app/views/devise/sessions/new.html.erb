<div class="row justify-content-center">
  <div class="col-12 col-sm-6 form-login">

    <h2>Je me connecte</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    placeholder: "johndoe@gmail.com",
                    error: "L'adresse email est obligatoire pour se connecter",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    label: 'Mot de passe',
                    placeholder: "••••••",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "btn purple-btn" %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
