<div class="show-card">

  <div class="show-card-top">
    <div class="card-img" style="background-image: url(<%= cl_image_path(@activity.photo.key)%>)">
      <%= link_to :back do %>
        <i class="fa-solid fa-chevron-left fa-5x" style="color: #614BF2;"></i>
      <% end %>
      <h1><%= @activity.title %></h1>
    </div>
  </div>

  <div class="show-card-bottom">

    <div class="show-card-bottom-user">
      <%= cl_image_tag @activity.user.avatar.key, class: "avatar-bordered", crop: "fill", fetch_format: :auto %>
      <p><%= @activity.user.first_name %></p>
    </div>

    <div class="show-card-bottom-date">
    <i class="fa-regular fa-calendar fa-5x" style="color: #614BF2;"></i>
    <p><%= activity.date.strftime("%a. %d/%m à %Hh%M") %></p>
    </div>

    <div class="show-card-bottom-place">
      <i class="fa-solid fa-location-dot fa-5x" style="color: #614BF2;"></i>
      <p><%= activity.address %> - <%= activity.city %></p>
    </div>

    <div class="show-card-bottom-content">
      <p><%= activity.content %></p>
    </div>

    <div class="show-card-bottom-participante">
      <%# à faire quand on aura les registrations %>
    </div>
  </div>

</div>

<%# ce lien permet d'ajouter ou de retirer l'activité des favoris %>
<%= link_to toggle_favorite_activity_path(@activity), remote: true, data: {
  turbo_method: :post,
  controller: "favorites",
  action: "click->favorites#toggleColor"
  } do %>
  <i data-favorites-target="heart" class="favorite-heart <%= current_user.favorited?(@activity) ? 'fa-solid' : 'fa-regular' %> fa-heart"></i>
<% end %>
