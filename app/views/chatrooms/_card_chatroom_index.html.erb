<div class="chatrooms">
  <div class="chatroom-photo-and-info position-relative">
    <% unless Message.my_chatrooms_messages(current_user, chatroom) == 0 %>
      <div class="chatroom-notifications"><%= Message.my_chatrooms_messages(current_user, chatroom) %></div>
    <% end %>
    <%= cl_image_tag chatroom.activity.photo.key, width: 160, height: 160, crop: :fill %>
    <div class="nb-participants"><%= chatroom.activity.bookings.size + 1 %> <i class="fa-solid fa-person"></i></div>
    <div class="chatroom-info">
      <h3><%= chatroom.name %></h3>
      <div class="chatroom-info-2">
        <p><i class="fa-solid fa-calendar-days"></i> <%= l(chatroom.activity.date, format: "%A %d %B %Y Ã  %Hh%M") %></p>
      </div>
    </div>
  </div>
  <div class="chevron-chatroom">
    <i class="fa-solid fa-circle-chevron-right"></i>
  </div>
</div>
